<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical" >

    <include layout="@layout/menu" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonFoodOrder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0.000075dip"
            android:layout_weight="1"
            android:background="#f5f5f5"
            android:text="订单数据"
            android:textColor="#000000"
             android:padding="5dip"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonExpensesOrder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0.000075dip"
            android:layout_weight="1"
            android:background="#f5f5f5"
            android:text="支付款项数据"
            android:textColor="#000000"
             android:padding="5dip"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonCollectionOrder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0.000075dip"
            android:layout_weight="1"
            android:background="#f5f5f5"
            android:text="带回总数数据"
            android:textColor="#000000"
             android:padding="5dip"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonBalanceOrder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0.000075dip"
            android:layout_weight="1"
            android:background="#f5f5f5"
            android:text="结算其他数据"
             android:padding="5dip"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/queryAllDBListview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_margin="5dip" />
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:orientation="horizontal" >
          <Button
              android:id="@+id/button_id_shang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0.000075dip"
            android:background="#f5f5f5"
            android:text="上一页"
            android:padding="5dip"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_id_xia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0.000075dip"
            android:background="#f5f5f5"
            android:text="下一页"
             android:padding="5dip"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>